GSL_CFLAGS    = $(shell ${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe -e "RcppGSL:::CFlags()")
GSL_LIBS      = $(shell ${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe -e "RcppGSL:::LdFlags()")
CXX_STD       = CXX11
PKG_CXXFLAGS  = $(SHLIB_OPENMP_CXXFLAGS) $(GSL_CFLAGS)
PKG_CFLAGS    = $(SHLIB_OPENMP_CFLAGS) $(GSL_CFLAGS)
PKG_LIBS      = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) \
                $(FLIBS) $(LDFLAGS) $(GSL_LIBS)
